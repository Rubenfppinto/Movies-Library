<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p class="ptagw">
  <strong>Description:</strong><br>
  <%= @movie.description %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @movie.genre %>
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>IMDB Rating:</strong>
  <%= @movie.rating %>/10
</p>

<p>
  <strong>Age rating:</strong>
  <%= @movie.age_rating %>
</p>

<p>
  <strong>Director:</strong>
  <%= link_to @movie.director.name, director_path(@movie.director), :class => 'hlink' %>
</p>
<br>
<br>
<%= link_to 'Edit', edit_movie_path(@movie), :class => 'btn btn-primary' %>
<%= link_to 'Back', movies_path, :class => 'btn btn-success' %>
<hr>
<h3>Comments</h3>
<% @movie.comments.each do % |comment| %>
  <div>
    <p><%= comment.body %></p>
  </div>
<% end %>
<hr>
<h3>Add Comment</h3>
<%= form_for([@movie, @movie.comments.build]) do |c| %>
    <p>
        <%= c.text_area(:body, {:class => 'form-control'}) %>
    </p>

    <p>
        <%= c.submit({:class => 'btn btn-default'}) %>
    </p>
<% end %>
