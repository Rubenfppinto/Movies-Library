<%= form_with(model: movie, local: true) do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :genre %>
    <%= form.text_field :genre %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year %>
  </div>

  <div class="field">
    <%= form.label "IMDB Rating" %>
    <%= form.text_field :rating %>
  </div>

  <div class="field">
    <%= form.label :age_rating %>
    <%= form.number_field :age_rating %>
  </div>


  <div class="field">
    <%= form.collection_select :director_id, Director.all, :id, :name, prompt: "Select director" %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
